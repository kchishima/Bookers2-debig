<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー数</th>
    <th><%= link_to :"#{ user.followings.count}",followings_user_path(user.id) %></th>
    </tr>
    <tr> 
    <th>フォロワ数</th>
    <th><%= link_to :"#{user.followers.count}" , followers_user_path(user.id) %></th>
    </tr>
    <th>
      <% unless current_user == user %>
      <% if current_user.following?(user) %>
      <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete , remote: true %></td>
      <% else %>
      <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post , remote: true%></td>
      <% end %>
      <% end %>
    </th>
</table>

<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>